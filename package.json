{
  "name": "node-typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "a boilerplate using node with typescript and webpack",
  "main": "./src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./build",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "webpack",
    "start:dev": "NODE_ENV=development webpack",
    "run:dev": "pm2 start build/index.js sys_config/pm2.processes.config.js --env development",
    "start:prod": "pm2 start build/index.js sys_config/pm2.processes.config.js --env production --watch",
    "start:staging": "pm2 start build/index.js sys_config/pm2.processes.config.js --env staging --watch",
    "monitor": "pm2 monit",
    "logs": "pm2 logs api-rest --lines 2000",
    "stop:dev": "pm2 delete api-rest"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AhmedCommando/node-typescript-webpack"
  },
  "author": "Ahmed Khalil Bejaoui",
  "license": "MIT",
  "devDependencies": {
    "@types/webpack": "^4.4.34",
    "codelyzer": "^5.1.0",
    "fork-ts-checker-webpack-plugin": "^1.3.7",
    "ts-loader": "^6.0.4",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-defocus": "^2.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-rxjs-subject-restrictions-rule": "^1.0.4",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
